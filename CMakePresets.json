{
    "version": 3,
    "cmakeMinimumRequired":{
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "default",
            "displayName": "Default Config",
            "inherits": "base"
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "inherits": "base",
            "cacheVariables": {
                  "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}
